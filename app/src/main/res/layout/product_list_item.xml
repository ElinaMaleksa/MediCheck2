<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="100"
    android:background="@color/grayLight"
    android:gravity="center"
    android:layout_marginBottom="5dp"
    android:divider="?android:dividerVertical"
    android:showDividers="middle"
    android:padding="5dp"
    android:minHeight="55dp">

    <CheckBox
        android:id="@+id/add_item_to_favorite"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="11"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:button="@drawable/star" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/product_name"
        app:autoSizeTextType="uniform"
        android:layout_weight="45"
        android:text="@string/product_name"
        android:layout_margin="5dp"
        android:gravity="center"
        android:textColor="@color/colorTextBlack" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/ingredients"
        android:text="@string/ingredients"
        android:textColor="@color/colorTextBlack"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/best_before"
        app:autoSizeTextType="uniform"
        android:layout_weight="30"
        android:text="@string/best_before"
        android:layout_margin="5dp"
        android:gravity="center"
        android:textColor="@color/colorTextBlack" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:id="@+id/button_see_details"
        android:src="@drawable/arrow_right_24dp"
        android:background="@color/grayLight"
        android:contentDescription="@string/see_details"/>
</LinearLayout>
