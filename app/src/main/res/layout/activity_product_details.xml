<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.ProductDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="25dp">

    <TextView
            android:id="@+id/titleDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_details"
            android:textSize="20sp"
            android:textColor="@color/colorTextBlack"
            android:textAlignment="center" />

    <TextView
        android:id="@+id/titleNameDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/product_name"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="15dp"
        android:textAlignment="textStart"
        android:layout_marginBottom="5dp" />

    <TextView
            android:id="@+id/nameDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/product_name"
            android:textColor="@color/colorTextBlack" />

    <TextView
        android:id="@+id/titleIngredientsDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ingredients"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="15dp"
        android:textAlignment="textStart"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/ingredientsDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ingredients"
        android:textColor="@color/colorTextBlack" />

    <TextView
        android:id="@+id/titleBestBeforeDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/best_before"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="15dp"
        android:textAlignment="textStart"
        android:layout_marginBottom="5dp" />
        <TextView
            android:id="@+id/bestBeforeDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/best_before"
            android:textColor="@color/colorTextBlack" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp">

            <Button
                android:id="@+id/button_register"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="@string/add_to_favourite"
                android:textColor="@color/colorPrimary" />
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
