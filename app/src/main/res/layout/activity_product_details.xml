<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.ProductDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_details"
            android:textAlignment="center"
            android:textColor="@color/colorTextBlack"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/titleNameDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:text="@string/product_name"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/nameDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/product_name"
            android:textColor="@color/colorTextBlack" />

        <TextView
            android:id="@+id/titleIngredientsDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:text="@string/ingredients"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/ingredientsDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ingredients"
            android:textColor="@color/colorTextBlack" />

        <TextView
            android:id="@+id/titleBestBeforeDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:text="@string/best_before"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/bestBeforeDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/best_before"
            android:textColor="@color/colorTextBlack" />


        <TextView
            android:id="@+id/titleSerialNumberDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:text="@string/serial_number"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/serialNumberDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="@string/serial_number"
            android:textColor="@color/colorTextBlack" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"></RelativeLayout>
    </LinearLayout>
</ScrollView>
